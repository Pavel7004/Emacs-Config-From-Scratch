[colors]
;background = ${xrdb:color0:#666}
background = #ff00
background-alt = #cc000000
;foreground = ${xrdb:color7:#222}
foreground = #ffffff
foreground-alt = #ffffff
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/example]
;monitor = ${env:MONITOR:}
width = 100%
height = 25
;offset-x = -10%
;offset-y = 20%
radius = 0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 0
line-color = #f00

border-size = 5
border-color = #00000000

padding-left = 1
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = UbuntuSansMono:pixelsize=12;1
font-1 = FontAwesome5Free:style=Solid:pixelsize=15;1
font-2 = FontAwesome5Brands:pixelsize=15;1"

modules-left = xwindow 
modules-center = memory i3 cpu
modules-right = date filesystem pulseaudio xkeyboard temperature
tray-position = right
tray-padding = 1
tray-background = ${colors.background}
;tray-transparent = false
tray-detached = false
tray-offset-x = 1
tray-scale = 1

;wm-restack = bspwm
;wm-restack = i3

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

